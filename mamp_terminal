#Acessar mysql usando mamp terminal
    /Applications/MAMP/Library/bin/mysql --host=localhost -uroot -proot

#verificar o banco de dados que est√° aberto
    status;

#acessar banco de dados
    use cadastro; // exemplos com banco de dados cadastro criado.

#verificar tabelas
    show tables;

#verifica estrutura da tabelas
    desc ou describe gafanhotos; // exemplo com tabela criada dentro do banco de dados cadastro.

#update
    update cursos set nome = 'PHP' where idcurso = '4';

#verificar qual comando foi usado para criar a tabela
    show create table amigos; // exemplo dado com uma tabela 'amigos'

#verificar qual comando foi usado para criar banco de dados
    show create database exemplo;