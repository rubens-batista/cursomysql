Select DQL

#Ordenar por nome
    select * from cursos
    order by nome;

#ordenar por nome de baixo para cima
    select * from cursos
    order by nome desc; // desc como parametro (tbm funciona asc)

#mostrar colunas selecionandas
    select nome, carga, ano from cursos
    order by nome;

#mais organizado
    select ano, nome, carga from cursos
    order by ano, nome;

#filtrar linhas
    select * from cursos
    where ano = '2016'
    order by nome;

#filtrar linhas e colunas
    select nome, descricao, carga from cursos
    where ano = '2016'
    order by nome;

#filtrar por operadores relacionais básicos
    select nome, descricao, ano from cursos
    where ano != 2016 // <> tbm pode ser usado como diferente
    order by ano;

#filtrar operador between 
    select nome, ano from cursos
    where ano between 2014 and 2016
    order by ano desc, nome asc;

#filtrar operador in
    select nome, descricao, ano from cursos
    where ano in (2014, 2016)
    order by ano;

#filtrar operador and
    select nome, carga, totaulas from cursos
    where carga > 35 and totaulas < 30
    order by ano;

#filtrar operador or
    select nome, carga, totaulas from cursos
    where carga > 35 or totaulas < 30
    order by ano;

#operador like
    % // caractere coringa, substitui nenhum, ou varios caracteres
    select * from cursos
    where nome like 'P%';

#wildcards
    #selecionar letra a no final
        select * from cursos
        where nome like '%a'; /// % usado antes da letra, faz com que filtre com final dos campos
    #em qualquer local
        select * from cursos
        where nome like '%a%';
    #em lugar nenhum
        select * from cursos
        where nome not like '%a%';

    #usando _ ele filtra os que tem algum caractere no final
        // _ tbm é um caractere coringa
        select * from cursos
        where nome like 'ph%p_';

#distiguindo
    // lista eliminando as repetições
    select distinct nacionalidade from gafanhotos
    order by nacionalidade;

#agregações
    //Conta
        select count(*) from cursos;
        ---
        select count(*) from cursos 
        where carga > 40;
    //máximo
        select max(carga) from cursos;
        ---
        select max(totaulas) from cursos
        where ano = '2016';
    //menor
        select min(totaulas) from cursos
        where ano = '2016';
    //somar
        select sum(totaulas) from cursos
        where ano = '2016';
    //tirar média
        select avg(totaulas) from cursos
        where ano = '2016';

#agrupando
    select carga from cursos
    group by carga;

#agrupando e agregando
    select carga, count(nome) from cursos
    group by carga;
    -----
    select ano, count(*) from cursos
    group by ano
    having count(ano) >= 5 // sobe usar no campo que está fazendo
    order by count(*) desc;